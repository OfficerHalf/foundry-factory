{
  "name": "@ghost-fvtt/foundry-factory",
  "version": "0.4.0",
  "description": "An interactive command line tool to bootstrap modules and systems for Foundry Virtual Tabletop",
  "main": "./dist/index.mjs",
  "bin": {
    "foundry-factory": "dist/index.mjs"
  },
  "type": "module",
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^7.1.0",
    "fs-extra": "^9.1.0",
    "inquirer": "^8.0.0",
    "nunjucks": "^3.2.3",
    "ora": "^5.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.7",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.20",
    "@types/nunjucks": "^3.1.4",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1",
    "rollup": "^2.40.0",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2"
  },
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "lint": "eslint --ext .ts,.js .",
    "lint:fix": "eslint --ext .ts,.js --fix .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "format": "prettier --write './**/*.(ts|js|json)'",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "contributors": [
    {
      "name": "Johannes Loher",
      "email": "johannes.loher@fg4f.de"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/ghost91-/foundry-factory",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghost91-/foundry-factory.git"
  },
  "bugs": {
    "url": "https://github.com/ghost91-/foundry-factory/issues"
  },
  "keywords": [
    "foundry",
    "foundry-vtt",
    "cli"
  ],
  "files": [
    "template",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --fix",
    "*.(json)": "prettier --write"
  }
}
